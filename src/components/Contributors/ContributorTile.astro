---
const { name, discord, position, description, imageSrc, kofiLink } = Astro.props
---

<style>
  .contributor-tile {
    height: 100%;
    text-align: center;
    background-color: rgba(0, 0, 0, 0.6);
    padding: 15px 15px 35px;
    margin: 10px;
    border-radius: 20px;
    display: flex;
    flex-direction: column;
    align-items: center; /* Center content horizontally */
    z-index: 1;
  }

  .contributor-name {
    font-size: 22px;
    color: hsla(0, 0%, 100%, 0.8);
  }

  .contributor-discord {
    color: hsla(0, 0%, 100%, 0.7);
    font-size: 14px;
    font-weight: 100;
  }

  .contributor-divider {
    background: hsla(0, 0%, 100%, 0.3);
    width: 100%;
    height: 2px;
    border-radius: 3px;
    opacity: 1;
    margin-bottom: 10px;
    color: inherit;
    border: 0;
    border-top: var(--bs-border-width) solid;
  }

  .contributor-details {
    height: 90px;
  }

  h4.contributor-details-custom {
    color: hsla(0, 0%, 100%, 0.8);
    font-size: 1.0625rem;
    font-weight: 400;
  }

  small.contributor-small-custom {
    font-size: 80%;
    font-weight: 400;
  }

  a.kofi {
    bottom: 10px;
    font-size: smaller;
  }

  img {
    display: block;
    margin: 0 auto;
  }
</style>

<div
  class="contributor-tile relative w-[300px] text-center sm:max-w-[350px] md:max-w-[400px]"
>
  <img
    loading="lazy"
    src={imageSrc}
    alt={`${name}'s icon`}
    class="h-[150px] w-[150px] rounded-full shadow-lg"
  />

  <!-- Username -->
  <h4 class="contributor-name mb-0 mt-2">{name}</h4>

  <!-- Discord -->
  <p class="contributor-discord">@{discord}</p>
  <hr class="contributor-divider" />

  <!-- Role -->
  <div class="contributor-details flex flex-col justify-start">
    <h4 class="contributor-details-custom mb-1">{position}</h4>
    <small class="contributor-small-custom">"{description}"</small>

    {
      kofiLink && (
        <a
          href={kofiLink}
          target="_blank"
          rel="noopener noreferrer"
          class="kofi mt-5"
        >
          <small class="contributor-small-custom mb-2">
            <i class="fa fa-coffee"> Buy me a coffee!</i>
          </small>
        </a>
      )
    }
  </div>
</div>
