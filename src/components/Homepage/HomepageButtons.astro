---
const changelogUrl = "changelog"
const contributorsUrl = "contributors"
const discordUrl = "https://discord.gg/wKJKxq5WQt"

const buttonStyle =
  "homepage-button flex items-center justify-center w-full py-[10px] text-lg border transition"
---

<style>
  .homepage-button {
    color: pink;
    background-color: transparent;
    text-decoration: none;
    border-color: #0d63fe;
    border-radius: 0.5rem;
  }
  .homepage-button:visited {
    color: orange;
    background-color: transparent;
    text-decoration: none;
  }
  .homepage-button:hover {
    color: cyan !important;
    text-decoration: underline;
    border-color: limegreen;
    background-color: #0d63fe;
  }
</style>

<div class="flex flex-col justify-center md:flex-row md:gap-5">
  <div class="mb-3 flex w-full justify-center md:w-1/3">
    <a
      class={buttonStyle}
      href={changelogUrl}
      target="_blank"
      rel="noopener noreferrer"
    >
      <b class="text-xl lg:text-2xl">
        <i class="fa fa-clock-rotate-left nav-logo-custom"></i> Changelog
      </b>
    </a>
  </div>
  <div class="mb-3 flex w-full justify-center md:w-1/3">
    <a
      class={buttonStyle}
      href={contributorsUrl}
      target="_blank"
      rel="noopener noreferrer"
    >
      <b class="text-xl lg:text-2xl">
        <i class="fa fa-user-pen nav-logo-custom"></i> Contributors
      </b>
    </a>
  </div>
  <div class="mb-3 flex w-full justify-center md:w-1/3">
    <a
      class={buttonStyle}
      href={discordUrl}
      target="_blank"
      rel="noopener noreferrer"
    >
      <b class="text-xl lg:text-2xl">
        <i class="fa-brands fa-discord nav-logo-custom"></i> Discord
      </b>
    </a>
  </div>
</div>
