---
import AnimatedSquares from "@components/_common/AnimatedSquares.astro"
---

<style>
  .page-header-style {
    height: 400px !important;
    min-height: 400px !important;
    max-height: 400px !important;
    overflow: hidden !important;
  }

  .page-header {
    min-height: 100vh;
    max-height: 999px;
    padding: 0;
    color: #fff;
    position: relative;
    overflow: hidden;
  }

  .header-filter .container {
    z-index: 2;
    position: relative;
  }

  .page-header .container {
    height: 100%;
    color: #fff;
  }

  .page-header-container-style {
    top: 80px;
    text-align: center;
    width: 100%;
  }

  .page-header .content-center {
    position: absolute;
    top: 50%;
    left: 50%;
    z-index: 2;
    transform: translate(-50%, -50%);
    text-align: center;
    color: #fff;
    padding: 0 15px;
    max-width: 880px;
  }

  .title {
    font-weight: 600;
    font-size: 2.0625rem;
    line-height: 1.05;
    margin-top: 30px;
    margin-bottom: 15px;
    color: #fff !important;
  }

  .title-caption {
    color: #fff !important;
    font-weight: 600;
    text-transform: capitalize;
    margin-bottom: 30px;
    line-height: 1.4em;
    font-size: 1.4375rem;
    margin-top: 0;
  }
</style>

<!-- Animation Stuff -->
<div class="page-header header-filter page-header-style overflow-hidden">
  <AnimatedSquares />
  <div
    class="container top-[80px] mx-auto flex flex-col items-center justify-center px-[30px] text-center"
  >
    <div class="w-[100%] content-center">
      <h1 class="title">AZUR LANE'S EN COMMUNITY GUIDE COMPENDIUM</h1>
      <h3 class="title-caption hidden sm:block">
        Created And Supported By #Gameplay-Help And A bunch of AL Guidemakers
        From Various Servers
      </h3>
    </div>
  </div>
</div>
